{
  "env": {
    "browser": true,
    "es2020": true,
    "node": false
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "no-inner-declarations": ["off"],
    "no-global-assign": ["off"],
    "no-control-regex": ["off"],
    "no-empty": ["warn"],
    "no-unused-vars": ["warn"],
    "no-var": ["error"],
    "no-unneeded-ternary": ["error"],
    "one-var": [
      "error",
      {
        "separateRequires": false,
        "var": "consecutive",
        "let": "consecutive",
        "const": "consecutive"
      }
    ],
    "operator-assignment": ["error"],
    "prefer-const": ["error"]
  },
  "root": true
}
